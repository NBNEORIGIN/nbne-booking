# NBNE Booking - Environment Variables Template
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=nbne_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=nbne_main

# Alternative: Use DATABASE_URL instead of individual variables
# DATABASE_URL=postgresql://nbne_admin:password@localhost:5432/nbne_main

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@nbnesigns.co.uk
FROM_NAME=NBNE Booking

# Email/SMS Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Backup Encryption (for backup scripts)
AGE_PUBLIC_KEY=age1xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# AGE_SECRET_KEY is only needed for restore, store securely!

# Backup Configuration
BACKUP_DIR=/srv/backups
RETENTION_DAYS=30

# Security (optional - auto-generated if not set)
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application
PROJECT_NAME=NBNE Booking API
VERSION=0.1.0-alpha
API_V1_STR=/api/v1
