# Production Environment Variables
# Copy this to .env on your server and fill in the values

# Database
POSTGRES_USER=booking_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=booking_db

# Application
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
PROJECT_NAME=NBNE Booking API
VERSION=1.0.0

# CORS (your domain)
BACKEND_CORS_ORIGINS=["https://booking.nbnesigns.co.uk","https://nbnesigns.co.uk"]

# Backup Encryption (generate with scripts/generate_backup_keys.sh)
AGE_PUBLIC_KEY=
AGE_SECRET_KEY=

# Email (SMTP)
SMTP_HOST=smtp.ionos.co.uk
SMTP_PORT=587
SMTP_USER=noreply@nbnesigns.co.uk
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_FROM_EMAIL=noreply@nbnesigns.co.uk
SMTP_FROM_NAME=NBNE Booking

# Backup Settings
BACKUP_DIR=/srv/backups
BACKUP_RETENTION_DAYS=30
